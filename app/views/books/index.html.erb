<!DOCTYPE html>
<html>

<head>
</head>

<body>
  <div class="container">

    <% if @book.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h1><%= @book.errors.count %>  errors prohibited this obj from being saved:</h1>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="row">

    <div class="col-xs-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>

  <div class="col-xs-9">
  <h1>Books</h1>
  <table>
  	<thead>
  	  <tr>
        <th></th>
  	  	<th>Title</th>
  	  	<th>Opinion</th>
  	  	<th colspan="5"></th>
  	  </tr>
  	</thead>
  	<% @books.each do |book| %>
  	<tbody>
  	  <tr>
        <td>
          <%= link_to user_path(book.user) do %>
             <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, fotmat: 'jpg', fallback: "no_image.jpg" %>
          <% end %>
        </td>
  		  <td><%= link_to book.title,book_path(book) %></td>
  		  <td><%= book.body %></td>
        <!-- いいねボタンを追加 -->
        <td>
          <% if book.favorited_by?(current_user) %>
            <li>
              <%= link_to book_favorites_path(book), method: :delete do %>
                <i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></i>
                <%= book.favorites.count %>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to book_favorites_path(book), method: :post do %>
                <i class="glyphicon glyphicon-heart-empty" aria-hidden="true"></i>
                <%= book.favorites.count %>
              <% end %>
            </li>
          <% end %>
        </td>
        <!-- コメント件数表示を追加 -->
        <td>コメント数：<%= book.book_comments.count %></td>
  	  </tr>
  	</tbody>
  	<% end %>
  </table>

 </body>

</html>
