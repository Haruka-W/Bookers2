<!DOCTYPE html>
<html>

<head>
</head>

<body>
  <div class="container">

  <div class="row">

  <div class="col-xs-3">
    <%= render 'books/list', book: @book, user: @user %>
  </div>

  <div class="col-xs-9">
  <h2>Book detail</h2>
  <table>
  	<tbody>
  	  <tr>
        <td>
            <%= link_to user_path(@book.user) do %>
             <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fotmat: 'jpg', fallback: "no_image.jpg" %>
             <%= @book.user.name %>
            <% end %>
        </td>
  		  <td><%= @book.title %></td>
  		  <td><%= @book.body %></td>
        <!-- コメント件数表示を追加 -->
        <td>コメント数：<%= @book.book_comments.count %></td>
        <td>
          <% if @book.user == current_user %>
          <%= link_to 'Edit', edit_book_path(@book), class: "btn-sm btn-success" %>
          <% end %>
        </td>
        <td>
          <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book), class: "btn-sm btn-danger", method: :delete, data:{confirm: "本当に消しますか？"} %>
          <% end %>
      </td>
  	  </tr>
  	</tbody>
  </table>
  </div>

  <!-- コメント投稿欄 -->
  <%= form_for [@book, @book_comment] do |f| %>
    <div class="col-xs-9">
      <%= f.text_area :comment,rows:'5', placeholder: "コメントを入力してください" %>
    </div>
    <%= f.submit "送信", class: "btn btn-base-1 mt-20 pull-right" %>
  <% end %>

 </body>

</html>
