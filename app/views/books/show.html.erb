<!DOCTYPE html>
<html>

<head>
</head>

<body>
  <div class="container">
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>

  <div class="row">

  <div class="col-xs-3">
    <%= render 'books/list', book: @book, user: @user %>
  </div>

  <div class="col-xs-9">
  <h2>Book detail</h2>
  <table>
  	<tbody>
  	  <tr>
        <td>
            <%= link_to attachment_image_tag(@book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg"), user_path(@book.user) %>
        </td>
        <td><%= @book.user.name %></td>
  		  <td><%= @book.title %></td>
  		  <td><%= @book.body %></td>
        <td>
          <% if @book.user == current_user %>
          <%= link_to 'Edit', edit_book_path(@book), class: "btn-sm btn-success" %>
          <% end %>
        </td>
        <td>
          <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book), class: "btn-sm btn-danger", method: :delete, data:{confirm: "本当に消しますか？"} %>
          <% end %>
      </td>
  	  </tr>
  	</tbody>
  </table>

 </body>

</html>
