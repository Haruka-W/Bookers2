<h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "profile-thumb", fallback: "no_image.jpg"%><br>
  <teble>
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
  </teble>
    <% if user.id == current_user.id %>
      <%= link_to '', edit_user_path(user), class: "btn btn-default glyphicon glyphicon-wrench col-xs-12" %>
    <% end %>

<h2>New book</h2>
  <%= form_for(book) do |f| %>
    <label for="book_title">Title</label><br>
    <%= f.text_field :title %><br>
    <label for="book_opinion">Opinion</label><br>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
  <% end %>
