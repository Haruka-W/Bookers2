  <div class="container">
  <div class="row">

    <div class="col-xs-3">
      <%= render 'info', user: @user,now: ''%>
      <%= render 'relationships/follow_button', user: @user %>
      <%= render 'books/form', book: @book %>
    </div>

  <div class="col-xs-9">
  <h2>Books</h2>
  <table>
  	<thead>
  	  <tr>
        <th></th>
  	  	<th>Title</th>
  	  	<th>Opinion</th>
  	  	<th colspan="4"></th>
  	  </tr>
  	</thead>
  	<% @books.each do |book| %>
  	<tbody>
  	  <tr>
        <td>
            <%= link_to attachment_image_tag(book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg"), user_path(book.user) %>
        </td>
  		  <td><%= link_to book.title,book_path(book) %></td>
  		  <td><%= book.body %></td>
        <td>コメント数：<%= book.book_comments.count %></td>
  	  </tr>
  	</tbody>
  	<% end %>
  </table>
  </div>

  </div>
  </div>
