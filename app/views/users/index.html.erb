<!DOCTYPE html>
<html>

<head>
</head>

<body>
  <div class="container">
    <p id ="notice"></p>

  <div class="row">

    <div class="col-xs-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>

  <div class="col-xs-9">
  <h1>Users</h1>
  <table>
  	<thead>
  	  <tr>
        <th></th>
  	  	<th>image</th>
  	  	<th>name</th>
  	  	<th colspan="3"></th>
  	  </tr>
  	</thead>
  	<% @users.each do |user| %>
  	<tbody>
  	  <tr>
        <td>
          <%= link_to attachment_image_tag(user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg"), user_path(user) %>
        </td>
  		  <td>
          <%= user.name %>
        </td>
  		  <td><%= link_to 'Show', user_path(user) %></td>
  	  </tr>
  	</tbody>
  	<% end %>
  </table>

 </body>

</html>
