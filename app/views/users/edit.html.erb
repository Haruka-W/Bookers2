<!DOCTYPE html>
<html>

<head>
</head>

<body>

    <% if @user.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="container">
  	<h2>User info</h2>
  	<%= form_for(@user) do |f| %>
  	  <div class="field">
  	  	<label for="user_name">Name</label>
  	  	<%= f.text_field :name %>
  	  </div>
  	  <div class="field">
  	  	<label for="user_image">Image</label>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "profile-thumb", fallback: "no_image.jpg"%>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
  	  </div>
  	  <div class="field">
  	  	<label for="user_introduction">Introduction</label>
  	  	<%= f.text_area :introduction %>
  	  </div>
  	  <%= f.submit "Update User" %>
  	<% end %>

</body>