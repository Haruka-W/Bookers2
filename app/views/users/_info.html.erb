<div class="user_info">

<h2>User info</h2>
  <table class="table">
    <tr>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "profile-thumb", fallback: "no_image.jpg"%>
    </tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <!-- フォロー機能追加 -->
    <tr>
      <th>follows</th>
      <th>
        <a href="<%= following_user_path(user) %>">
        <%= user.followings.count %>
        </a>
      </th>
    </tr>
    <tr>
      <th>followers</th>
      <th>
        <a href="<%= followers_user_path(user) %>">
        <%= user.followers.count %>
        </a>
      </th>
    </tr>
  </table>

    <% if user.id == current_user.id %>
      <%= link_to '', edit_user_path(user), class: "btn btn-default glyphicon glyphicon-wrench col-xs-12" %>
    <% end %>

</div>
